<h1>Show Results Page</h1>

<%= form_tag favorites_display_path do %>
	<% @search_results.each_with_index do |favorite, index| %>

		<div class = "field">
			<%= index + 1 %> . <%= favorite["name"] %><br>
			<%= image_tag favorite["image"] %>
		</div>
		
		<%= hidden_field_tag "user_id", current_user.id %>
		<%= hidden_field_tag "name", favorite["name"] %>
		<%= hidden_field_tag "title", favorite["title"] %>
		<%= hidden_field_tag "image", favorite["image"] %>
		<%= hidden_field_tag "description", favorite["description"] %>

	<% end %>

	<div class ="submit">
		<%= submit_tag %>
	</div>
<% end %>
